{
    "app-id" : "com.ranfdev.Geopard",
    "runtime" : "org.gnome.Platform",
    "runtime-version" : "42",
    "sdk" : "org.gnome.Sdk",
    "sdk-extensions" : [
        "org.freedesktop.Sdk.Extension.rust-stable"
    ],
    "command" : "geopard",
    "finish-args" : [
        "--share=ipc",
        "--socket=fallback-x11",
        "--socket=wayland",
        "--device=dri",
        "--share=network"
    ],
    "build-options" : {
        "append-path" : "/usr/lib/sdk/rust-stable/bin",
        "env": {
            "CARGO_HOME": "/run/build/Geopard/cargo",
            "RUST_LOG": "info"
        }    
    },
    "modules" : [
        {
            "name" : "Geopard",
            "buildsystem" : "meson",
            "config-opts": [
                "-Dbuildtype=release",
                "-Doffline=true"
            ],
            "sources" : [
                "generated-sources.json",
                {
                    "type" : "archive",
                    "url": "https://github.com/ranfdev/Geopard/releases/download/v1.0.0/geopard-1.0.0.tar.xz",
                    "sha256": "f5fd087c3d64f49baa11aeba4a3acc244ad84f268425426d37d07128ef4a4228"
                }
            ]
        }
    ]
}
