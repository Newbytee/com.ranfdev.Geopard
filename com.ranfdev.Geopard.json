{
    "app-id" : "com.ranfdev.Geopard",
    "runtime" : "org.gnome.Platform",
    "runtime-version" : "42",
    "sdk" : "org.gnome.Sdk",
    "sdk-extensions" : [
        "org.freedesktop.Sdk.Extension.rust-stable"
    ],
    "command" : "geopard",
    "finish-args" : [
        "--share=ipc",
        "--socket=fallback-x11",
        "--socket=wayland",
        "--device=dri",
        "--share=network",
        "--filesystem=xdg-download/Geopard"
    ],
    "build-options" : {
        "append-path" : "/usr/lib/sdk/rust-stable/bin",
        "env": {
            "CARGO_HOME": "/run/build/Geopard/cargo",
            "RUST_LOG": "info"
        }    
    },
    "modules" : [
        {
            "name" : "Geopard",
            "buildsystem" : "meson",
            "config-opts": [
                "-Dbuildtype=release",
                "-Doffline=true"
            ],
            "sources" : [
                {
                    "type" : "archive",
                    "url": "https://github.com/ranfdev/Geopard/releases/download/v1.1.0/com.ranfdev.Geopard.tar.xz",
                    "sha256": "98c7e5eba23791d5a2882260b76a83b540f03a76edbb8818fcb7dc0c952a5097"
                }
            ]
        }
    ]
}
